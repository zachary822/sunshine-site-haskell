<div class="join" hx-target="#output">
    <button class="join-item btn" hx-push-url="true" hx-get="/businesses?page=1{{#search}}&search={{search}}{{/search}}" {{#disableFirst}}disabled{{/disableFirst}}>«</button>
    <button class="join-item btn" hx-push-url="true" hx-get="/businesses?page={{prevPage}}{{#search}}&search={{search}}{{/search}}" {{#disableFirst}}disabled{{/disableFirst}}>‹</button>
    <button class="join-item btn">Page {{page}}</button>
    <button class="join-item btn" hx-push-url="true" hx-get="/businesses?page={{nextPage}}{{#search}}&search={{search}}{{/search}}" {{#disableLast}}disabled{{/disableLast}}>›</button>
    <button class="join-item btn" hx-push-url="true" hx-get="/businesses?page={{maxPage}}{{#search}}&search={{search}}{{/search}}" {{#disableLast}}disabled{{/disableLast}}>»</button>
</div>
